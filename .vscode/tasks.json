{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {

            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cd ${workspaceFolder} && colcon build",
        },
        {
            "label": "rosdep install",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "cd ${workspaceFolder} && rosdep install --from-paths src --ignore-src -r -y",
        }
    ]
}
